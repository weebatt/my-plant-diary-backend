# Copy to .env and adjust values for local/dev

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest

# PostgreSQL per service
POSTGRES_USER=postgres
USER_DB_PASSWORD=postgres
DIARY_DB_PASSWORD=postgres
DICTIONARY_DB_PASSWORD=postgres
OUTBOX_DB_PASSWORD=postgres

# Services ports (override if needed)
GATEWAY_PORT=8080
USER_PORT=8081
DIARY_PORT=8082
DICTIONARY_PORT=8083
ORCHESTRATOR_PORT=8091
SCHEDULER_PORT=8092
TELEGRAM_PORT=8093
AVITO_PORT=8094
OUTBOX_PORT=8090

# Security / OAuth2
SECURITY_AUTH_ENABLED=false
SECURITY_JWT_ISSUER_URI=

# Avito API
AVITO_API_BASE_URL=https://api.avito.ru
AVITO_API_TOKEN=
